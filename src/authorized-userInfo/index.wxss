.mask_layer {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 999;
  left:0;
  top:0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}
.modal_box {
  width: 76%;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  background: #FFFFFF;
  margin: -150px 12% 0 12%;
  border-radius: 3px;
}

.title {
  padding: 15px;
  text-align: center;
  background-color: gazure;
}

.content {
  overflow-y: scroll; /*超出父盒子高度可滚动*/
  padding: 48rpx 44rpx 30rpx 44rpx;
  color: #353535;
  font-size: 30rpx;
  line-height: 42rpx;
}

.btns {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background-color: #FFFFFF;
  border-top: 1px solid #E5E5E5;
}
.sure {
  width: 100%;
  color: #BB9246;
  font-size: 36rpx;
  text-align: center;
  padding: 25rpx;
  background-color: unset;
  padding-left: 0;
  padding-right: 0;
  line-height: unset;
}
.sure::after {
  border: none;
}
